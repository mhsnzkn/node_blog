<div class="form-group">
    <label for="title">Baslik</label>
    <input required value="<%= article.title %>" class="form-control" id="title" name="title" />
    <span class="text-danger error-message" id="span-title"></span>
</div>
<div class="form-group">
    <label for="description">Aciklama</label>
    <textarea required class="form-control" id="description" name="description" ><%= article.description %></textarea>
    <span class="text-danger error-message" id="span-description"></span>
</div>
<div class="form-group">
    <label for="title">Metin</label>
    <textarea required class="form-control" rows="15" id="markdown" name="markdown" ><%= article.markdown %></textarea>
    <span class="text-danger error-message" id="span-markdown"></span>
</div>
<div class="d-flex justify-content-between my-4">
    <a class="btn btn-secondary" href="/">Geri</a>
    <button type="button" id="btn-submit" class="btn btn-primary" >Kaydet</button>
</div>
